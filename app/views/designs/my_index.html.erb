<p id="notice"><%= notice %></p>

<h1><%= t('view.my_designs') %></h1>

<div class="row" style="display: -webkit-flex; display: flex; flex-wrap: wrap;" >
  <% @designs.each do |design| %>
    <div class="col col-sm-3 col-xs-6 ">
      <div class="panel panel-default">
        <div class="panel-body text-center">
          <!--<%= link_to image_tag(design.design_file.thumb, :border => '0', :size => '127x127', :style => 'object-fit: cover')%>-->
          <%= image_tag(design.design_file.thumb, :border => '0', :size => '127x127', :style => 'object-fit: cover')%>
        </div>
        <div class="panel-footer">
          <table class="table">
            <tbody>
              <tr><th><%= design.name %></th></tr>
              <tr><th>カット</th><th><%= design.enable_cut %></th></tr>
              <tr><th>刻印</th><th><%= design.print_type %></th></tr>
              <tr><th>作成日</th><th><%= design.created_at %></th></tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to '新規追加', new_design_path %>

