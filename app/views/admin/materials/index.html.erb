<h1><%= t('view.admin.materials') %></h1>
<p>素材一覧です</p>
<%= link_to new_admin_material_path do %>
  <button type="button" class="btn btn-primary">新規追加</button>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">素材名</th>
      <th scope="col">説明</th>
      <th scope="col">カット可・不可</th>
      <th scope="col">刻印タイプ</th>
      <th scope="col">価格</th>
      <th scope="col">提供状況</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.description %></td>
        <td><%= material.enable_cut ? '可' : '不可' %></td>
        <td><%= material.print_type_i18n %></td>
        <td><%= material.price %></td>
        <td><%= material.provide_status_i18n %></td>
        <td><%= link_to '編集', edit_admin_material_path(material) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
