<%= form_for material, url: path_to_submit do |f| %>
  <% if material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul>
      <% material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table" width="90%">
    <tbody>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :description %></td>
        <td><%= f.text_field :description %></td>
      </tr>
      <tr>
        <td><%= f.label :enable_cut %></td>
        <td><%= f.check_box :enable_cut %></td>
      </tr>
      <tr>
        <td><%= f.label :print_type %></td>
        <td>
          <%= f.select :print_type, Material.print_types_i18n.keys.map { |k| [Material.print_types_i18n[k], k] } %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :price %></td>
        <td><%= f.number_field :price %></td>
      </tr>
      <tr>
        <td><%= f.label :provide_status %></td>
        <td>
          <%= f.select :provide_status, Material.provide_statuses_i18n.keys.map { |k| [Material.provide_statuses_i18n[k], k] } %>
        </td>
      </tr>
    </tbody>
  <table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
